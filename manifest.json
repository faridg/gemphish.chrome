{
    "manifest_version": 3,
    "name": "Sidepanel Boilerplate",
    "version": "1.0",
    "description": "A simple side panel extension",
    "permissions": [
        "sidePanel",
        "contextMenus",
        "activeTab",
        "scripting",
        "tabs",
        "storage"
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "side_panel": {
      "default_path": "panel.html"
    },
    "action": {
      "default_title": "Open Side Panel"
    },
    "background": {
      "service_worker": "background.js",
      "type": "module"
    }
  }