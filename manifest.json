{
    "manifest_version": 3,
    "name": "Gemphish",
    "version": "1.0",
    "description": "Your Gemini AI web companion for safe browsing",
    "permissions": [
        "sidePanel",
        "contextMenus",
        "activeTab",
        "scripting",
        "tabs",
        "storage"
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "side_panel": {
      "default_path": "panel.html"
    },
    "action": {
      "default_title": "Open Side Panel",
      "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
    },
    "background": {
      "service_worker": "background.js",
      "type": "module"
    }
  }