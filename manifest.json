{
    "manifest_version": 3,
    "name": "Sidepanel Boilerplate",
    "version": "1.0",
    "description": "A simple side panel extension",
    "permissions": [
      "sidePanel"
    ],
    "side_panel": {
      "default_path": "panel.html"
    },
    "action": {
      "default_title": "Open Side Panel"
    },
    "background": {
      "service_worker": "background.js",
      "type": "module"
    }
  }